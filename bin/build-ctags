#!/usr/bin/env zsh

if [ $(uname) = Darwin ]; then
    echo "${0}: Skip on Mac"
    exit 0;
fi

# load function
. ${HOME}/.zsh/functions/check-version

SCRIPT_VERSION=1
checkVersion $(basename $0) $SCRIPT_VERSION

mkdir -p ~/local/src || exit 1
cd ~/local/src || exit 1
git clone git@github.com:universal-ctags/ctags.git || exit 1
cd ctags || exit 1
./autogen.sh || exit 1
./configure --prefix ${HOME}/local || exit 1
make || exit 1
make install || exit 1

updateVersion
