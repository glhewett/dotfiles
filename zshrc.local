[[ -f ~/.fzf.zsh ]]    && source ~/.fzf.zsh
[[ -f ~/.zshrc.work ]] && source ~/.zshrc.work

# local builds
export PATH=$HOME/local/bin:$HOME/.local/bin:/usr/local/bin:$PATH

# change the title for xterm windows
case $TERM in
    xterm*)
        precmd () {print -Pn "\e]0;%n@%m: %~\a"}
        ;;
esac
